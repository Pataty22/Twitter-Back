<section>
  <div class="container p-0">
    <div
      class="userBackground"
      style="width: 100%; height: 150px; background-color: var(--color-principal)"
    ></div>
    <div class="container pt-3 border border-top-0" style="position: relative">
      <div id="divImageProfile">
        <img id="imageProfile" src="<%= user.image %>" />
      </div>
      <div class="d-flex justify-content-between">
        <span
          id="avatar"
          style="width: 150px; border-radius: 50%; border: white; border: 5px"
        ></span>
        <% if(loggedUser.id !== user.id) { %>
          <% if(loggedUser.following.includes(user.id)) { %>
            <form method="post" action="/usuarios/<%=user.id%>/follow"_?method=PATCH>
              <button type="submit" class="btn btn-login rounded-pill p-1" style="width: 90px">
                Following
              </button>
            </form>
            <% } else { %>
              <form method="post" action="/usuarios/<%=user.id%>/follow"?_method=PATCH>
                <button type="submit" class="btn btn-login rounded-pill p-1" style="width: 90px">
                  Follow
                </button>
              </form>
          <% } %>
        <% } %>
      </div>
      <div class="d-flex justify-content-between" id="userInfo">
        <div id="username" class="mt-5">
          <h2 class="m-0 fs-4"><%=user.firstname%> <%=user.lastname%></h2>
          <h3 class="small">@<%=user.username%></h3>
        </div>
        <div class="align-self-end" id="userFollowers">
          <span class="fw-semibold"><%=user.following.length%></span>
          <span class="small me-3"
            ><a style="text-decoration: none; color: black" href="/usuarios/<%=user.id%>/following"
              >Following</a
            ></span
          >
          <span class="fw-semibold"><%=user.followers.length%></span>
          <span class="small"
            ><a style="text-decoration: none; color: black" href="/usuarios/<%=user.id%>/followers"
              >Followers</a
            ></span
          >
        </div>
      </div>
      <div class="mt-3">
        <p
          class="fw-semibold"
          style="
            text-decoration-line: underline;
            text-decoration-thickness: 3px;
            text-underline-offset: 12px;
            text-decoration-color: var(--color-principal);
            margin-bottom: 9px;
          "
        >
          Tweets
        </p>
      </div>
    </div>
  </div>
</section>
