<section>
  <div class="border p-3">
    <div>
      <h2 class="fs-5 fw-semibold mb-3">Home</h2>
    </div>
    <div class="d-flex">
      <div>
        <img
          src="<%= user.image %>"
          alt="Profile picture default"
          style="width: 50px"
          class="rounded-circle"
        />
      </div>
      <form method="post" action="/" class="form-floating flex-fill mx-2">
        <input
          name="tweetContent"
          class="px-2 py-2 input-group"
          placeholder="What's happening?"
          id="tweetContent"
          style="border: 0; height: 60px"
          required
        />
        <div class="d-flex justify-content-end">
          <button
            type="submit"
            class="btn btn-login rounded-pill mt-2"
            style="background-color: var(--color-principal)"
          >
            Tweet
          </button>
        </div>
      </form>
    </div>
  </div>
</section>
